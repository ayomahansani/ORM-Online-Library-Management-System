      <TextField fx:id="txtPassword" layoutX="112.0" layoutY="294.0" onAction="#txtPasswordOnAction" prefHeight="35.0" prefWidth="376.0" />
      <Button fx:id="btnLogin" layoutX="204.0" layoutY="374.0" mnemonicParsing="false" onAction="#btnLoginOnAction" prefHeight="40.0" prefWidth="184.0" text="Login">
