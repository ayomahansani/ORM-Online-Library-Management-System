      <Button fx:id="btnForgotPassword" layoutX="102.0" layoutY="329.0" mnemonicParsing="false" onAction="#btnForgotPasswordOnAction" prefHeight="27.0" prefWidth="120.0" style="-fx-background-color: transparent;" text="Forgot your password ?" underline="true">
         <font>
            <Font size="10.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
